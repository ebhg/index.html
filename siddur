    <footer class="hidden">
        <button class="btn-back hidden" id="btnBack" onclick="changeStep(-1)">Back</button>
        <button class="btn-next" id="btnNext" onclick="handleNextClick()">Next: Wine</button>
    </footer>

    <script>
        let currentStep = 0; // 0 = Welcome
        const totalSteps = 3;

        const btnBack = document.getElementById('btnBack');
        const btnNext = document.getElementById('btnNext');
        const finalMessage = document.getElementById('final-message');
        const footer = document.querySelector('footer');
        const progressContainer = document.querySelector('.progress-container');

        // Initial UI Setup
        updateUI();

        function startApp() {
            currentStep = 1;
            updateUI();
        }

        function handleNextClick() {
            if (currentStep < totalSteps) {
                changeStep(1);
            } else {
                // Restart logic - go back to Welcome
                restartApp();
            }
        }

        function changeStep(direction) {
            const newStep = currentStep + direction;

            if (newStep >= 0 && newStep <= totalSteps) { // Changed to allow 0 (Welcome)
                // Remove active class from current step
                if (currentStep > 0) {
                     document.getElementById(`step${currentStep}`).classList.remove('active');
                }
                
                // Update current step index
                currentStep = newStep;
                
                // Add active class to new step if not 0 (0 is handled in updateUI)
                if (currentStep > 0) {
                    document.getElementById(`step${currentStep}`).classList.add('active');
                }
                
                updateUI();
            }
        }

        function restartApp() {
            // Hide current step (likely step 3)
            document.getElementById(`step${currentStep}`).classList.remove('active');
            
            // Reset to 0 (Welcome)
            currentStep = 0;
            
            updateUI();
        }

        function updateUI() {
            // Handle Welcome Screen (Step 0)
            if (currentStep === 0) {
                document.getElementById('welcome').classList.add('active');
                progressContainer.classList.add('hidden');
                footer.classList.add('hidden');
                
                // Ensure other steps are hidden (cleanup if returning from end)
                for(let i=1; i<=totalSteps; i++) {
                     document.getElementById(`step${i}`).classList.remove('active');
                }
                return;
            } else {
                document.getElementById('welcome').classList.remove('active');
                document.getElementById(`step${currentStep}`).classList.add('active');
                progressContainer.classList.remove('hidden');
                footer.classList.remove('hidden');
            }

            // Update Dots
            for (let i = 1; i <= totalSteps; i++) {
                const dot = document.getElementById(`dot${i}`);
                if (i === currentStep) {
                    dot.classList.add('active');
                    dot.style.backgroundColor = 'var(--accent)';
                } else {
                    dot.classList.remove('active');
                    dot.style.backgroundColor = '#ddd';
                }
            }

            // Update Buttons based on Step
            if (currentStep === 1) {
                btnBack.classList.remove('hidden'); // Show button
                btnBack.innerText = "Home";         // Label as Home
                btnNext.innerText = "Next: Wine";
                btnNext.classList.remove('btn-finish');
                finalMessage.classList.add('hidden');
            } 
            else if (currentStep === 2) {
                btnBack.classList.remove('hidden');
                btnBack.innerText = "Back";         // Reset label
                btnNext.innerText = "Next: Bread";
                btnNext.classList.remove('btn-finish');
                finalMessage.classList.add('hidden');
            } 
            else if (currentStep === 3) {
                btnBack.classList.remove('hidden');
                btnBack.innerText = "Back";         // Reset label
                btnNext.innerText = "Start Over";
                btnNext.classList.add('btn-finish');
                finalMessage.classList.remove('hidden');
            }
        }
    </script>
</body>
